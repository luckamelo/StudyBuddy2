import { Share, Button } from 'react-native';

const compartilharApp = async () => {
  try {
    await Share.share({
      message: 'Use o StudyBuddy para organizar seus estudos! ðŸ“š',
    });
  } catch (error) {
    alert(error.message);
  }
};

// Uso:
<Button title="Compartilhar App" onPress={compartilharApp} />
